<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <attr name="banner_background" format="color" />
        <attr name="banner_text" format="string" />
        <attr name="banner_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="MovieEvaluationView">
        <attr name="rate_num" format="float" /> <!--    rate_num - числовое значение рейтинге    -->
        <attr name="rate_service" format="string" /> <!--    rate_service - название сервиса, строка в виде "Рейтинг IMDb"    -->
        <attr name="number_of_rates" format="integer" /> <!--    число оценок   -->
    </declare-styleable>

    <declare-styleable name="MovieSelectionView">
        <attr name="theme_title" format="string" />
        <attr name="is_selected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MovieCardView">
        <attr name="movie_title" format="string" />
    </declare-styleable>

    <declare-styleable name="PrimaryButtonView">
        <attr name="button_text" format="string" />
        <attr name="button_enabled" format="boolean" />
        <attr name="button_loading" format="boolean" />
        <attr name="button_view_type" format="enum">
            <enum name="primary" value="1" />
            <enum name="secondary" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SecondaryButtonView">
        <attr name="button_text_sec" format="string" />
        <attr name="button_enabled_sec" format="boolean" />
        <attr name="button_loading_sec" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ToolbarView">
        <attr name="title" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="end_icon" format="reference" />
        <attr name="end_icon_is_visible" format="boolean" />
        <attr name="start_icon" format="reference" />
    </declare-styleable>
</resources>