<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_heading">
        <item name="fontFamily">@font/days_one</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">28sp</item>
    </style>
    <style name="text_label">
        <item name="fontFamily">@font/days_one</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
    </style>

    <style name="text_paragraph">
        <item name="fontFamily">@font/inter</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>
    <style name="text_paragraph_bold">
        <item name="fontFamily">@font/inter</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>
    <style name="text_caption">
        <item name="fontFamily">@font/inter</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
    </style>
    <style name="text_button">
        <item name="fontFamily">@font/inter</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="text_button_bold">
        <item name="fontFamily">@font/inter</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>