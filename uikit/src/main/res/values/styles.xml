<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Headline">
        <item name="android:fontFamily">@font/days_one</item>
    </style>

    <style name="Text.Base">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Text.Headline.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">28sp</item>
    </style>

    <style name="Text.Headline.Title.NoLineSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/text_headings</item>
    </style>

    <style name="Text.Headline.SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
    </style>

    <style name="Text.Headline.SubTitle.NoLineSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/text_headings</item>
    </style>

    <style name="Text.Headline.Large">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_headings</item>
    </style>

    <style name="Text.Headline.Large.NoSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Text.Headline.Large48">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_headings</item>
    </style>

    <style name="Text.Base.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>

    <style name="Text.Base.Medium.NoLineSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/text_base</item>
    </style>

    <style name="Text.Base.Medium.Regular">
        <item name="fontWeight">400</item>
    </style>

    <style name="Text.Base.Medium.Regular.NoLineSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Text.Base.Medium.Regular.Description">
        <item name="android:textColor">@color/text_base</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Text.Base.Medium.Bold">
        <item name="fontWeight">700</item>
    </style>

    <style name="Text.Base.Medium.Bold.NoLineSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Text.Base.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
    </style>

    <style name="Text.Base.Big">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">18sp</item>
    </style>

    <style name="Text.Base.Small.Regular">
        <item name="fontWeight">400</item>
    </style>

    <style name="Text.Base.Big.Regular">
        <item name="fontWeight">400</item>
    </style>

    <style name="Text.Base.Small.Regular.NoLineSpacing">
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Text.Base.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Text.Base.Button.Regular">
        <item name="fontWeight">500</item>
    </style>

    <style name="Text.Base.Button.Bold">
        <item name="fontWeight">600</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_radius_16</item>
    </style>

    <style name="CardView.RoundedTopCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialCardView.RoundTopCorners
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.RoundTopCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/card_radius_24</item>
        <item name="cornerSizeTopLeft">@dimen/card_radius_24</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundedImageView.SessionView">
        <item name="cornerSize">@dimen/card_radius_18</item>
    </style>

    <style name="Text.Base.SplashItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_background</item>
        <item name="tabTextColor">@color/text_caption_dark</item>
        <item name="tabSelectedTextColor">@color/text_light</item>
    </style>
</resources>