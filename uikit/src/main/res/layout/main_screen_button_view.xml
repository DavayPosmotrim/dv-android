<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_screen_button_height"
    android:background="@drawable/main_screen_button_background"
    android:backgroundTint="@color/primary_base"
    android:orientation="horizontal"
    android:padding="@dimen/padding_16"
    tools:layout_width="match_parent">

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:text="@string/create_session"
        android:textAppearance="@style/Text.Headline.SubTitle"
        android:textColor="@color/text_light" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/main_screen_button_icon_size"
        android:layout_height="@dimen/main_screen_button_icon_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_arrow_exclude" />
</LinearLayout>