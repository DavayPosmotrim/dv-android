<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_16"
    android:background="@drawable/button_internal_background_enabled"
    android:gravity="center">

    <com.davai.uikit.ProgressButtonView
        android:id="@+id/progress_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_48"
        android:elevation="@dimen/elevation_2"
        android:gravity="center"
        android:text="@string/match_continue_session"
        android:textAppearance="@style/Text.Base.Button"
        android:textColor="@color/white"
        app:backgroundTint="@color/tertiary_base"
        app:cornerRadius="@dimen/card_radius_12"
        app:progress_stroke_color="@color/secondary_base"
        app:progress_stroke_width="@dimen/stroke_width_3" />
</LinearLayout>