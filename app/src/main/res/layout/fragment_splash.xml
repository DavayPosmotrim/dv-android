<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    tools:context=".feature.splash.fragment.SplashFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_cardview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_32"
        android:backgroundTint="@color/background_white"
        app:cardCornerRadius="@dimen/card_radius_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent" />

    <com.jawnnypoo.physicslayout.PhysicsFrameLayout
        android:id="@+id/physics_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_24"
        android:layout_marginVertical="@dimen/margin_16"
        android:background="@android:color/transparent"
        app:gravityX="0.0"
        app:gravityY="9.8"
        app:layout_constraintBottom_toBottomOf="@+id/mcv_cardview"
        app:layout_constraintEnd_toEndOf="@id/mcv_cardview"
        app:layout_constraintStart_toStartOf="@id/mcv_cardview"
        app:layout_constraintTop_toTopOf="@id/mcv_cardview"
        app:physics="true">

        <TextView
            android:id="@+id/textview1"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:backgroundTint="@color/primary_base"
            android:text="@string/splash_watch" />

        <TextView
            android:id="@+id/textview2"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_comedy" />

        <TextView
            android:id="@+id/textview3"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_fantasy" />

        <TextView
            android:id="@+id/textview4"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_fantastic" />

        <TextView
            android:id="@+id/textview5"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_biopic" />

        <TextView
            android:id="@+id/textview6"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_action" />

        <TextView
            android:id="@+id/textview7"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_detective" />

        <TextView
            android:id="@+id/textview11"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_musical" />

        <TextView
            android:id="@+id/textview12"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_adventure" />

        <TextView
            android:id="@+id/textview8"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_melodrama" />

        <TextView
            android:id="@+id/textview9"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_thriller" />

        <TextView
            android:id="@+id/textview10"
            style="@style/Text.Base.SplashItem"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_negative_24"
            android:text="@string/splash_documental" />

        <View
            android:layout_width="@dimen/static_view_width_164"
            android:layout_height="@dimen/static_view_height_64"
            android:layout_gravity="bottom|end"
            app:layout_bodyType="statik"
            app:layout_shape="rectangle" />
    </com.jawnnypoo.physicslayout.PhysicsFrameLayout>

    <TextView
        android:id="@+id/tv_bottom_item"
        style="@style/Text.Headline.Large48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_32"
        android:text="@string/splash_let"
        app:layout_constraintBottom_toBottomOf="@+id/mcv_cardview"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>