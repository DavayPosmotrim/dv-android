<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".feature.sessionconnection.presentation.SessionConnectionFragment">

    <TextView
        android:id="@+id/tv_enter_session_code"
        style="@style/Text.Base.Small.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sessionconnection_enter_session_code"
        android:textColor="@color/text_caption_dark"
        app:layout_constraintBottom_toTopOf="@id/et_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.davai.uikit.KeyboardBackEditText
        android:id="@+id/et_code"
        style="@style/Text.Headline.Title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_64"
        android:autofillHints="name"
        android:backgroundTint="@color/background_white"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:lines="1"
        android:minWidth="@dimen/dimen_80"
        android:textColor="@color/text_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="VMst457" />

    <TextView
        android:id="@+id/tv_error_hint"
        style="@style/Text.Base.Small.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_code"
        tools:text="@string/sessionconnection_no_session" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enter"
        style="@style/Text.Base.Button.Regular"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64"
        android:backgroundTint="@color/primary_base"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/sessionconnection_join"
        android:textColor="@color/text_light"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>