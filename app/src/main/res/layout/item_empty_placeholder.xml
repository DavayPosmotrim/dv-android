<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/coincidences_screen_empty_coincidences"
        android:src="@drawable/placeholder_empty" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:gravity="center"
        android:text="@string/coincidences_screen_empty_coincidences"
        android:textAppearance="@style/Text.Headline.SubTitle"
        android:textColor="@color/text_headings" />


</LinearLayout>