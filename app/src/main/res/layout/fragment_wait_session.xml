<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.waitsession.presentation.WaitSessionFragment">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/toolbar_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.davai.uikit.ToolbarView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_64"
            app:title="Участники"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_24"
            android:paddingBottom="@dimen/padding_16"
            android:paddingHorizontal="@dimen/padding_16">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/background_copy_button">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Text.Base.Big.Regular"
                    android:layout_weight="1"
                    android:text="G1gfdg3"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"/>
            </LinearLayout>

            <com.davai.uikit.ButtonView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:button_text="ПРИГЛАСИТЬ"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selection_background"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_participant"
        app:layout_constraintTop_toTopOf="@+id/main_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/main_container"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:textColor="@color/text_caption_light"
        android:layout_marginBottom="@dimen/margin_20"
        android:textAlignment="center"
        style="@style/Text.Base.Medium.NoLineSpacing"
        android:text="Если вы пригласили друзей – дождитесь, когда они подключаться, прежде чем начать сеанс."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/main_container"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_genre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/padding_16"
        tools:listitem="@layout/item_text_view"
        app:layout_constraintTop_toTopOf="@+id/main_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/main_container"/>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bottombar_background"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/main_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.davai.uikit.ButtonView
            android:id="@+id/start_session_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:button_text="Начать сеанс"/>

        <com.davai.uikit.ButtonView
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginHorizontal="16dp"
            app:button_text="Отменить сеанс"
            app:button_view_type="secondary"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>